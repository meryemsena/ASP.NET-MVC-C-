<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
          
            <div class="collapse navbar-collapse">
                <div class="navbar-header pull-left">
                    <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                        <img src="~/Content/logo_bel.png" alt="Site Logo" style="height:60px; width: 60px" />
                    </a>
                </div>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
               

                @Html.ActionLink("Kayıt Formu", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Dosya Yükle", "Index", "File", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Hareketler", "Hareketler", "File", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Kişi Harcamaları", "Harcamalar", "File", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("İş Yerleri", "Kurum", "File", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Günlük Harcama", "Gunluk", "File", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Sakarya Büyükşehir Belediyesi</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>